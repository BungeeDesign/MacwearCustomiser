//Vars
$yellow: #efd636;
$grey: #212121;
$dark-grey: #0f0f0f;

//Container

.macwearCustomiserContainer {
    width: 100%;
    position: fixed;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    z-index: 99999;
    top: 1px;
    transition: all ease .5s;
}

.mcContainerClose {
    opacity: 0;
}

.mcContainerCloseDisplay {

    display: none;

}

//Editor Section
.mcEditor {
    width: 700px;
    height: 600px;
    background-color: $dark-grey;
    margin-left: auto;
    margin-right: auto;
    box-shadow: -1px 1px 114px rgba(0, 0, 0, 0.37);
    margin-top: 170px;
    padding: 10px;
}

.mcEditorContent {
    text-align: center;
}

.mcEditorProductImage {
    width: 250px;
    margin-left: auto;
    margin-right: auto;
    box-shadow: -1px 1px 114px rgba(0, 0, 0, 0.86);
}


.logo {
    width: 150px;
    margin-left: auto;
    margin-right: auto;
}

// Close
.close {
    color: $yellow;
    font-size: 28px;
    position: relative;
    float: right;
    cursor: pointer;
    transition: all cubic-bezier(1, 0.08, 0, 0.95) .5s;
    &:hover {
        transform: rotate(360deg);
    }
}

.closeViewContainer {
    width: 100%;
    text-align: center;
}

.closeView {
    background-color: #212121;
    width: 300px;
    height: 150px;
    box-shadow: -1px 1px 114px rgba(0, 0, 0, 0.75);
    position: absolute;
    color: #efd636;
    left: 0;
    right: 0;
    margin-left: auto;
    margin-right: auto;
    margin-top: 160px;
    z-index: 2; //Non Active State
    opacity: 0;
    transition: all .5s ease;
}

.cvActive {
    opacity: 1;
    margin-top: 170px;
}

.closeView>span {
    margin-top: 28px;
    display: block;
}

.yesBtn {
    background: $dark-grey;
    padding: 12px;
    margin-top: 33px;
    transition: all ease .3s;
    cursor: pointer;
    &:hover {
        background: $yellow;
        color: $dark-grey;
    }
}

.noBtn {
    background: $dark-grey;
    padding: 12px;
    transition: all ease .3s;
    cursor: pointer;
    &:hover {
        background: $yellow;
        color: $dark-grey;
    }
}

// Tee Shirt Sequence
.frontTee {
    width: 280px;
}

.backTee {
    position: absolute;
    width: 150px;
    display: none;
}

// Title Sequence
.mcTitle {
    font-family: 'Quicksand', sans-serif;
    font-size: 30px;
    color: $yellow;
}

.a {
    animation: aStart linear .2s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: block;
}

@keyframes aStart {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

.b {
    opacity: 0;
    animation: bStart ease 1s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: block;
}

@keyframes bStart {
    0% {
        transform: translateY(0px);
        opacity: 0;
    }
    100% {
        transform: translateY(-24px);
        opacity: 1;
    }
}
