//Vars
$yellow: #efd636;
$grey: #212121;
$dark-grey: #0f0f0f;

//Container

.macwearCustomiserContainer {
    width: 100%;
    position: fixed;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    z-index: 99999;
    top: 1px;
    transition: all ease .5s;
}

.mcContainerClose {
    opacity: 0;
}

.mcContainerCloseDisplay {

    display: none;

}

//Preload

.mcPreload {
    transform: scale(0);
    width: 100%;
    transition: all ease .5s;
}

.mcPreloadImage {
    box-shadow: -1px 1px 114px rgba(0,0,0,0.9);
    text-align: center;
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    margin-top: 210px;
}

.preloaderActive {
    transform: scale(1);
}

//Form Content (Always Hidden)

.formContent {
    display: none;
}

//Editor Section
.mcEditor {
    width: 990px;
    height: 720px;
    background-color: $dark-grey;
    margin-left: auto;
    margin-right: auto;
    box-shadow: -1px 1px 114px rgba(0, 0, 0, 0.37);
    margin-top: 170px;
    padding: 10px;
}

.mcEditorContent {
    text-align: center;
}

.mcEditorProductImage {
    width: 340px;
    margin-left: auto;
    margin-right: auto;
    perspective: 860px;
    // box-shadow: -1px 1px 114px rgba(0, 0, 0, 0.86);
}


.logo {
    width: 150px;
    margin-left: auto;
    margin-right: auto;
}


// Editor Selection Points Map

.locationMap {
    width: 800px;
    position: relative;
    margin: auto;
    z-index: 999;
}

.locationMapBack {
    display: none;
    width: 800px;
    position: relative;
    margin: auto;
    z-index: 999;

}

.locationMapBackActive {
    display: block;
}

.locationMapHidden {
    display: none;
}

.mapPoint {
    width: 30px;
    height: 30px;
    border-radius: 100px;
    background-color: $yellow;
    color: $dark-grey;
    opacity: .3;
    transition: all ease .5s;
    cursor: pointer;
    &:hover {

        transform: scale(1.2);

    }
}

.mpActive {
    opacity: 1;

}

.faCheck {
    top: 4px;
    position: relative;
}


.centerTee {
    position: absolute;
    left: 391px;
    top: 98px;
    
}

.centerTeeBack {
    position: absolute;
    left: 386px;
    top: 94px;

    
}


.leftBreast {
    position: absolute;
    left: 321px;
    top: 79px;

}

.rightBreast {
    position: absolute;
    left: 457px;
    top: 79px;

}

.rightShoulder {
    position: absolute;
    left: 521px;
    top: 72px;

}

.leftShoulder {
    position: absolute;
    left: 250px;
    top: 72px;

}

//Swtich Tee

.switchTee {
    color: $yellow;
    font-size: 50px;
    transition: all ease .5s;
    cursor: pointer;
    position: relative;
    top: 379px;
}

.switchIconRotate {
    transform: rotate(360deg);

}

.rotateTeeContainer {
    transition: all ease .5s;
    perspective: 600px;

}

.frontTeeContainer {
    transition: all ease .5s;
    transform: rotateX(0deg) rotateY(0deg);
    transform-style: preserve-3d;
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    
}

.backTeeContainer {
    transition: all ease .5s;
    transform: rotateX(0deg) rotateY(-179deg);
    transform-style: preserve-3d;
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    
}

.frontRotate {
    transform: rotateX(0deg) rotateY(179deg);
}

.backRotate {
    transform: rotateX(0deg) rotateY(0deg);
}



// Close
.close {
    color: $yellow;
    font-size: 28px;
    position: relative;
    float: right;
    cursor: pointer;
    transition: all ease .5s;
    &:hover {
        transform: scale(1.1);
    }
}

.closeViewContainer {
    width: 100%;
    text-align: center;
}

.closeView {
    background-color: #212121;
    width: 300px;
    height: 150px;
    box-shadow: -1px 1px 114px rgba(0, 0, 0, 0.75);
    position: absolute;
    color: #efd636;
    left: 0;
    right: 0;
    margin-left: auto;
    margin-right: auto;
    margin-top: 160px;
    z-index: 2; //Non Active State
    opacity: 0;
    transition: all .5s ease;
}

.cvActive {
    opacity: 1;
    margin-top: 170px;
}

.closeView>span {
    margin-top: 28px;
    display: block;
}

.yesBtn {
    background: $dark-grey;
    padding: 12px;
    margin-top: 33px;
    transition: all ease .3s;
    cursor: pointer;
    &:hover {
        background: $yellow;
        color: $dark-grey;
    }
}

.noBtn {
    background: $dark-grey;
    padding: 12px;
    transition: all ease .3s;
    cursor: pointer;
    &:hover {
        background: $yellow;
        color: $dark-grey;
    }
}

// Tee Shirt Sequence
.frontTee {
    width: 340px;
}

.backTee {
    width: 340px;
}

// Title Sequence
.mcTitle {
    font-family: 'Quicksand', sans-serif;
    font-size: 30px;
    color: $yellow;
}

.a {
    animation: aStart linear .2s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: block;
}

@keyframes aStart {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

.b {
    opacity: 0;
    animation: bStart ease 1s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: block;
}

@keyframes bStart {
    0% {
        transform: translateY(0px);
        opacity: 0;
    }
    100% {
        transform: translateY(-24px);
        opacity: 1;
    }
}
