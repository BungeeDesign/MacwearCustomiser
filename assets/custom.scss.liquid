// Title Sequence
.mcTitle {
    font-family: 'Quicksand', sans-serif;
    font-size: 30px;
    color: $yellow;
}

.a {
    animation: aStart linear .2s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: block;
}

@keyframes aStart {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

.b {
    opacity: 0;
    animation: bStart ease 1s;
    animation-fill-mode: forwards;
    animation-delay: 3s;
    display: block;
}

.bRemoveActive {
    animation: bRemove ease .5s;
    animation-fill-mode: forwards;
}

@keyframes bStart {
    0% {
        transform: translateY(0px);
        opacity: 0;
    }
    100% {
        transform: translateY(-24px);
        opacity: 1;
    }
}

@keyframes bRemove {
    0% {
        transform: translateY(0px);
        opacity: 1;
    }
    100% {
        transform: translateY(24px);
        opacity: 0;
    }
}


.c {
    opacity: 0;
    display: block;
}

.cActive {
    animation: cStart ease 1s;
    animation-fill-mode: forwards;
}

@keyframes cStart {
    0% {
        transform: translateY(0px);
        opacity: 0;
    }
    100% {
        transform: translateY(-61px);
        opacity: 1;
    }
}


.d {
    opacity: 0;
    display: block;
}

.dActive {
    animation: dStart ease 1s;
    animation-fill-mode: forwards;
}

@keyframes dStart {
    0% {
        transform: translateY(0px);
        opacity: 0;
    }
    100% {
        transform: translateY(-98px);
        opacity: 1;
    }
}


